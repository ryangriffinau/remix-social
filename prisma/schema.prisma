// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// was used prior to pscale migration
// datasource db {
//   provider = "sqlite"
//   url      = env("DATABASE_URL")
// }

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// to tell prisma about the new model: npx prisma db push
model Post {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String?
  body      String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String

  // if index is not included for the relation, performance will be bad
  // have left off for now to match course
  // @@index([authorId])
}

// note the hashed pw - we don't want to see the real one
model User {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String?
  email          String   @unique
  hashedPassword String
  role           String   @default("USER")
  posts          Post[]
}
